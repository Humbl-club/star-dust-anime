# Environment Variables Template
# Copy this file to .env.local and fill in your values

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Development Configuration
VITE_APP_ENV=development
VITE_APP_NAME=Anime & Manga Discovery Platform
VITE_APP_VERSION=1.0.0

# Analytics (Optional)
VITE_ANALYTICS_ID=your_analytics_id

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api

# Feature Flags (Development)
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Database Configuration (For local development)
VITE_DB_POOL_SIZE=10
VITE_DB_TIMEOUT=30000

# Security (Development only - use secure values in production)
VITE_ENCRYPTION_KEY=dev_encryption_key_change_in_production

# Social Authentication (Optional)
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_DISCORD_CLIENT_ID=your_discord_client_id

# External APIs (Optional)
VITE_ANILIST_API_URL=https://graphql.anilist.co
VITE_MAL_API_URL=https://api.myanimelist.net/v2

# Development Tools
VITE_STORYBOOK_PORT=6006
VITE_DEV_SERVER_PORT=8080

# Testing
VITE_TEST_TIMEOUT=10000
VITE_COVERAGE_THRESHOLD=80

# Bundle Analysis
VITE_ANALYZE_BUNDLE=false

# PWA Configuration
VITE_PWA_ENABLED=true
VITE_SW_CACHE_STRATEGY=CacheFirst